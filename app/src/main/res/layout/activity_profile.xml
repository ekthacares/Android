<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_profile_picture" /> <!-- Replace with your image resource -->

    <!-- User ID -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvUserIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="start"/>

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- UserId Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Donor Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Label for Donor Name -->
        <TextView
            android:id="@+id/tvDonorNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"/>

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Email Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvDonorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp" />

            <!-- Edit Icon (Aligned to the right next to the value) -->
            <ImageView
                android:id="@+id/imgEditDonorName"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Name"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp" />

        </RelativeLayout>


    </LinearLayout>

    <!-- Mobile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Label for Mobile -->
        <TextView
            android:id="@+id/tvMobileLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile No.: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"/>

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Mobile Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp" />
        </RelativeLayout>

    </LinearLayout>


    <!-- Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Label for Email -->
        <TextView
            android:id="@+id/tvEmaillabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"/>

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Email Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp" />

            <!-- Edit Icon (Aligned to the right next to the value) -->
            <ImageView
                android:id="@+id/imgEditEmail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Email"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp" />

        </RelativeLayout>
    </LinearLayout>



    <!-- DateOfBirth -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Label for DateOfBirth -->
        <TextView
            android:id="@+id/tvDateOfBirthlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DateOfBirth: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"/>/>

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- DateOfBirth Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvDateOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp" />
        </RelativeLayout>

    </LinearLayout>

    <!-- BloodGroup -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Label for BloodGroup -->
        <TextView
            android:id="@+id/tvBloodGrouplabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BloodGroup: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"/>/>

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- BloodGroup Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvBloodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp" />
        </RelativeLayout>

    </LinearLayout>

    <!-- Age -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Label for Age -->
        <TextView
            android:id="@+id/tvAgelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"/>/>

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Age Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Gender -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Label for Gender -->
        <TextView
            android:id="@+id/tvGenderlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"/>/>

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <!-- Gender Value TextView (Aligned to the right) -->
        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp" />
        </RelativeLayout>
    </LinearLayout>

        <!-- Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <!-- Label for Address -->
            <TextView
                android:id="@+id/tvAddresslabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="start"/>

            <!-- RelativeLayout to align value and edit icon to the right -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!-- Address Value TextView (Aligned to the right) -->
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="18sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="24dp" />

                <!-- Edit Icon (Aligned to the right next to the value) -->
                <ImageView
                    android:id="@+id/imgEditAddress"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Edit Address"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp" />
            </RelativeLayout>

        </LinearLayout>

    <!-- City -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <!-- Label for City -->
        <TextView
            android:id="@+id/tvCitylabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"/>

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <!-- City Value TextView (Aligned to the right) -->
        <TextView
            android:id="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp" />

            <!-- Edit Icon (Aligned to the right next to the value) -->
            <ImageView
                android:id="@+id/imgEditCity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit City"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp" />

        </RelativeLayout>
    </LinearLayout>

    <!-- State -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <!-- Label for State -->
        <TextView
            android:id="@+id/tvStatelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"/>

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- State Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp" />

            <!-- Edit Icon (Aligned to the right next to the value) -->
            <ImageView
                android:id="@+id/imgEditState"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit State"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
