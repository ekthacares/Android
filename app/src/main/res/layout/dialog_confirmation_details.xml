<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:layout_margin="16dp"
    android:background="@android:color/transparent"> <!-- CardView handles background -->

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border1"> <!-- Your custom drawable -->

        <TextView
            android:id="@+id/dialog_title"
            android:text="Confirmation Details"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"/>


        <TextView
            android:id="@+id/recipient_text"
            android:text="Recipient: "
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/confirmed_at_text"
            android:text="Confirmed At: "
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/start_time_text"
            android:text="Donation Start Time: "
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/stop_time_text"
            android:text="Donation Finished Time: "
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/ok_button"
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="20sp"
            android:textColor="@color/gray"
            android:background="@drawable/rounded_bg"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:onClick="dismissDialog"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>
