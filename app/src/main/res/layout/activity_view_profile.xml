<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/imgBackArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Back"
            android:clickable="true"
            />


        <!-- Profile Heading -->
        <TextView
            android:id="@+id/tvProfileHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imgBackArrow"
            android:layout_marginStart="16dp"/>


        <ImageView
            android:id="@+id/editProfile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:layout_toStartOf="@id/imgLogout"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:contentDescription="Edit Profile" />


        <!-- Logout Icon -->
        <ImageView
            android:id="@+id/imgLogout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_logout"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Logout" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />


    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/profile"
        android:clickable="true"
        android:focusable="true" />

    <!-- Remove marginTop here to close gap -->
    <TextView
        android:id="@+id/donor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donor Name"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <!-- ImageView for the donor image -->
        <ImageView
            android:id="@+id/donor_img"
            android:layout_width="374dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:src="@drawable/donorstatus"
            />

        <!-- TextView to display donor status over the image -->
        <TextView
            android:id="@+id/donor_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donor Status"
            android:textSize="20sp"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:weightSum="3">

        <!-- Column 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/bloodtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O+"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Type"
                android:textSize="16sp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Column 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/donatedcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donated"
                android:textSize="16sp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Column 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/RequestedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requested"
                android:textSize="16sp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <ImageView
        android:id="@+id/imglocation"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/location1"
        android:layout_marginTop="20dp"/>

    <!-- Remove marginTop here to close gap -->
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <LinearLayout
        android:id="@+id/layoutCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/imgCall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/callnow"
                android:contentDescription="Call" />

            <TextView
                android:id="@+id/tvCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Now"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu_bold"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_call"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:paddingStart="40dp" />
        </FrameLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />




</LinearLayout>
