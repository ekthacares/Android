<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RecyclerView to display the list of received requests -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReceivedRequests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="16dp" />

    <!-- TextView to show message when no emails are found -->
    <TextView
        android:id="@+id/noEmailsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Emails received for this user."
        android:visibility="gone"
        android:textSize="18sp"
        android:textColor="@color/error"
        android:layout_gravity="center" />

</FrameLayout>
