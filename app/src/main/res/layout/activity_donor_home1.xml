<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DonorHomeActivity1">

    <!-- Main Content Area -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar Section -->
<!--        <androidx.appcompat.widget.Toolbar-->
<!--            android:id="@+id/toolbar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="?attr/actionBarSize"-->
<!--            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"-->
<!--            app:title=""/>-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <!-- Navigation Icon (Left) -->
<!--                <ImageView-->
<!--                    android:id="@+id/toolbar_nav_icon"-->
<!--                    android:layout_width="48dp"-->
<!--                    android:layout_height="48dp"-->
<!--                    android:padding="8dp"-->
<!--                    android:src="@drawable/ic_menu"-->
<!--                    android:background="@drawable/rounded_bg"/>-->

                <!-- Welcome Text (Center) -->
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Welcome, User"
                    android:textSize="20sp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textColor="@color/black"
                    android:paddingStart="8dp"
                    android:layout_weight="1"/>

                <!-- First Icon (Campaign) -->
                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp">

                    <ImageView
                        android:id="@+id/ivCampaigns"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/campaign_icon"
                        android:padding="4dp"
                        android:layout_gravity="center" />

                    <!-- Notification Dot -->
                    <View
                        android:id="@+id/notification_dot1"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:background="@drawable/red_dot"
                        android:visibility="gone"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="-3dp"
                        android:layout_marginEnd="-3dp" />
                </FrameLayout>

                <!-- Second Icon (Notifications) -->
                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp">

                <ImageView
                    android:id="@+id/ivNotifications"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:src="@drawable/notification_icon"
                    android:layout_gravity="center" />
                    <!-- Notification Dot -->
                    <View
                        android:id="@+id/notification_dot"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:background="@drawable/red_dot"
                        android:visibility="gone"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="-3dp"
                        android:layout_marginEnd="-3dp" />
                </FrameLayout>

            </LinearLayout>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Heading TextView -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAMPAIGNS"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ubuntu_bold"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="4dp" />

                <!-- Latest Campaign results -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <!-- Card 1 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/campaign_card"
                            android:src="@drawable/component_1"
                            android:layout_width="325dp"
                            android:layout_height="200dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/gray"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="8dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:padding="8dp">

                                <!-- Add an empty View for spacing before the image -->
                                <View
                                    android:layout_width="18dp"
                                    android:layout_height="match_parent" />

                                <!-- Image -->
                                <ImageView
                                    android:layout_width="72dp"
                                    android:layout_height="103dp"
                                    android:src="@drawable/blood_pouch"
                                    android:layout_marginEnd="8dp"
                                    android:contentDescription="Campaign Icon" />

                                <!-- Text Layout -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="20dp"
                                    android:layout_weight="1">  <!-- Allows text to take remaining space -->


                                    <TextView
                                        android:id="@+id/tvCampaignTitle"
                                        style="@style/DashboardText1"
                                        android:text="Latest Campaign"
                                        android:textStyle="bold"
                                        android:textSize="30sp"
                                        android:fontFamily="@font/ubuntu_bold"
                                        android:layout_marginBottom="2dp"/>


                                    <TextView
                                        android:id="@+id/tvCampaignDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/ubuntu_bold"
                                        android:textSize="16sp"
                                        android:background="@color/black"
                                        android:textColor="@color/white"
                                        android:paddingHorizontal="6dp"
                                        android:paddingVertical="2dp"
                                        android:layout_marginTop="4dp"/>  <!-- Reduce top margin -->


                                    <TextView
                                        android:id="@+id/tvCampaignTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/ubuntu_bold"
                                        android:textSize="12sp"
                                        android:layout_marginTop="2dp"/>  <!-- Reduce top margin -->


                                </LinearLayout>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Card 2 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/campaign_card1"
                            android:src="@drawable/component_1"
                            android:layout_width="325dp"
                            android:layout_height="200dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/gray"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="8dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:padding="8dp">

                                <!-- Add an empty View for spacing before the image -->
                                <View
                                    android:layout_width="18dp"
                                    android:layout_height="match_parent" />


                                <!-- Image -->
                                <ImageView
                                    android:layout_width="72dp"
                                    android:layout_height="103dp"
                                    android:src="@drawable/blood_pouch"
                                    android:layout_marginEnd="8dp"
                                    android:contentDescription=" Upcoming Campaign Icon" />

                                <!-- Text Layout -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="20dp"
                                    android:layout_weight="1">  <!-- Allows text to take remaining space -->

                                    <TextView
                                        android:id="@+id/tvCampaignTitle1"
                                        style="@style/DashboardText1"
                                        android:text="Upcoming Campaign"
                                        android:textStyle="bold"
                                        android:textSize="30sp"
                                        android:fontFamily="@font/ubuntu_bold"
                                        android:layout_marginBottom="2dp" />


                                    <TextView
                                        android:id="@+id/tvCampaignDate1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/ubuntu_bold"
                                        android:textSize="16sp"
                                        android:background="@color/black"
                                        android:textColor="@color/white"
                                        android:paddingHorizontal="6dp"
                                        android:paddingVertical="2dp"
                                        android:layout_marginTop="4dp"/>  <!-- Reduce top margin -->

                                    <TextView
                                        android:id="@+id/tvCampaignTime1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/ubuntu_bold"
                                        android:textSize="12sp"
                                        android:layout_marginTop="2dp"/>  <!-- Reduce top margin -->

                                </LinearLayout>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Heading TextView -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="QUICK ACCESS"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ubuntu_bold"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp" />


                <!-- Quick Actions Cards-->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <!-- Card 1 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/my_donation"
                            android:layout_width="111dp"
                            android:layout_height="111dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="12dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">


                                <!-- Centered Image -->
                                <ImageView
                                    android:id="@+id/ivTipsImage1"
                                    android:layout_width="42dp"
                                    android:layout_height="42dp"
                                    android:src="@drawable/blood_pouch"
                                    android:layout_gravity="center"
                                    android:contentDescription="Donations" />

                                <!-- Text under Image -->
                                <TextView
                                    android:id="@+id/tvTipsText1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="My Donations"
                                    android:fontFamily="@font/ubuntu_bold"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/holo_red_light"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>
                        <!-- Empty Space -->
                        <View
                            android:layout_width="16dp"
                            android:layout_height="match_parent"/>

                        <!-- Card 2 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/quick_search_card"
                            android:layout_width="111dp"
                            android:layout_height="111dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <!-- Centered Image -->
                                <ImageView
                                    android:id="@+id/ivTipsImage2"
                                    android:layout_width="42dp"
                                    android:layout_height="42dp"
                                    android:src="@drawable/ic_find_donor"
                                    android:contentDescription="Find Donor" />

                                <!-- Text under Image -->
                                <TextView
                                    android:id="@+id/tvTipsText2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FIND DONOR"
                                    android:fontFamily="@font/ubuntu_bold"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/holo_red_light"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>
                        <!-- Empty Space -->
                        <View
                            android:layout_width="16dp"
                            android:layout_height="match_parent"/>

                        <!-- Card 3 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/trackingcard"
                            android:layout_width="111dp"
                            android:layout_height="111dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="12dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <!-- Centered Image -->
                                <ImageView
                                    android:id="@+id/ivTipsImage"
                                    android:layout_width="42dp"
                                    android:layout_height="42dp"
                                    android:src="@drawable/location_search"
                                    android:layout_gravity="center"
                                    android:contentDescription="Tracking" />

                                <!-- Text under Image -->
                                <TextView
                                    android:id="@+id/tvTipsText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tracking"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/holo_red_light"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:layout_width="16dp"
                            android:layout_height="match_parent"/>

                        <!-- Card 4 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/BloodforOtherscard"
                            android:layout_width="111dp"
                            android:layout_height="111dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="12dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <!-- Centered Image -->
                                <ImageView
                                    android:id="@+id/ivTipsImage3"
                                    android:layout_width="42dp"
                                    android:layout_height="42dp"
                                    android:src="@drawable/blood_pouch"
                                    android:layout_gravity="center"
                                    android:contentDescription="Request for Others" />

                                <!-- Text under Image -->
                                <TextView
                                    android:id="@+id/tvTipsText3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Request for others"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/holo_red_light"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </HorizontalScrollView>


                <!--- Notication Request-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="5dp">

                <!-- Heading Above the ScrollView -->
                <TextView
                    android:id="@+id/tvNotificationsHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request Recieved"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <!-- Card 1 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/nofication_card"
                            android:layout_width="320dp"
                            android:layout_height="111dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/red"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:gravity="center_vertical"> <!-- Ensures alignment -->

                                <!-- Text Layout (Hospital Name) -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">

                                    <!-- Name with Icon (Side by Side) -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/ic_userss"
                                            android:contentDescription="Name Icon"
                                            android:layout_marginEnd="4dp" />

                                        <TextView
                                            android:id="@+id/tvName"
                                            style="@style/DashboardText1"
                                            android:text="Upcoming Request"
                                            android:textStyle="bold"
                                            android:textSize="16sp"
                                            android:fontFamily="@font/ubuntu_bold"
                                            android:layout_marginBottom="4dp" />
                                    </LinearLayout>

                                    <!-- Hospital Name with Icon (Side by Side) -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/ic_location"
                                            android:contentDescription="Hospital Icon"
                                            android:layout_marginEnd="4dp" />

                                        <TextView
                                            android:id="@+id/tvHospitalName"
                                            style="@style/DashboardText1"
                                            android:text="Upcoming Request"
                                            android:textStyle="bold"
                                            android:textSize="16sp"
                                            android:fontFamily="@font/ubuntu_bold"
                                            android:layout_marginBottom="4dp" />
                                    </LinearLayout>

                                </LinearLayout>

                                <!-- Image and Time Layout -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <!-- Time TextView Above Image -->
                                    <TextView
                                        android:id="@+id/tvTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/ubuntu_bold"
                                        android:textSize="12sp"
                                        android:layout_marginBottom="4dp" />

                                    <!-- ImageView Below Time -->
                                    <FrameLayout
                                        android:layout_width="37dp"
                                        android:layout_height="50dp">

                                        <!-- ImageView for the blood icon -->
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_blood"
                                            android:scaleType="fitCenter"
                                            android:contentDescription="Blood Icon" />

                                        <!-- TextView overlaying the image -->
                                        <FrameLayout
                                            android:layout_width="37dp"
                                            android:layout_height="50dp">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:src="@drawable/ic_blood"
                                                android:scaleType="fitCenter"
                                                android:contentDescription="Blood Icon" />

                                            <TextView
                                                android:id="@+id/bloodIdText"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:textColor="@android:color/white"
                                                android:textSize="16sp"
                                                android:textStyle="bold"
                                                android:padding="2dp"
                                                android:background="@android:color/transparent" />
                                        </FrameLayout>

                                    </FrameLayout>

                                </LinearLayout>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>


                        <!-- Card 2 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/nofication_card1"
                            android:layout_width="320dp"
                            android:layout_height="111dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/red"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:gravity="center_vertical"> <!-- Ensures alignment -->

                                <!-- Text Layout (Hospital Name) -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">

                                    <!-- Name with Icon (Side by Side) -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/ic_userss"
                                            android:contentDescription="Name Icon"
                                            android:layout_marginEnd="4dp" />

                                        <TextView
                                            android:id="@+id/tvName1"
                                            style="@style/DashboardText1"
                                            android:text="Upcoming Request"
                                            android:textStyle="bold"
                                            android:textSize="16sp"
                                            android:fontFamily="@font/ubuntu_bold"
                                            android:layout_marginBottom="4dp" />
                                    </LinearLayout>

                                    <!-- Hospital Name with Icon (Side by Side) -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/ic_location"
                                            android:contentDescription="Hospital Icon"
                                            android:layout_marginEnd="4dp" />

                                        <TextView
                                            android:id="@+id/tvHospitalName1"
                                            style="@style/DashboardText1"
                                            android:text="Upcoming Request"
                                            android:textStyle="bold"
                                            android:textSize="16sp"
                                            android:fontFamily="@font/ubuntu_bold"
                                            android:layout_marginBottom="4dp" />
                                    </LinearLayout>

                                </LinearLayout>

                                <!-- Image and Time Layout -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <!-- Time TextView Above Image -->
                                    <TextView
                                        android:id="@+id/tvTime1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/ubuntu_bold"
                                        android:textSize="12sp"
                                        android:layout_marginBottom="4dp" />

                                    <FrameLayout
                                        android:layout_width="37dp"
                                        android:layout_height="50dp">

                                        <!-- ImageView for the blood icon -->
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_blood"
                                            android:scaleType="fitCenter"
                                            android:contentDescription="Blood Icon" />

                                        <!-- TextView overlaying the image -->
                                        <TextView
                                            android:id="@+id/bloodIdText1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:textColor="@android:color/white"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:padding="2dp"
                                            android:background="@android:color/transparent" />
                                    </FrameLayout>

                                </LinearLayout>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>


                <!---Invite a friend -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="374dp"
                            android:layout_height="111dp"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <!-- Image -->
                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:src="@drawable/ic_friend_icon"
                                    android:contentDescription="Icon"
                                    android:layout_marginEnd="16dp" />

                                <!-- Text Content -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="INVITE A FRIEND"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:textAllCaps="true" />

                                    <TextView
                                        android:id="@+id/tvSubtitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="INVITE YOUR FRIENDS OR FAMILY MEMBERS TO DONATE BLOOD"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:textAllCaps="true" />

                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/ivHomeIcon"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:scaleType="centerInside"
                            android:src="@drawable/home"
                            android:contentDescription="Image 1" />

                        <ImageView
                            android:id="@+id/ivDonateIcon"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:scaleType="centerInside"
                            android:src="@drawable/donate"
                            android:contentDescription="Image 2" />

                        <ImageView
                            android:id="@+id/ivUserIcon"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:scaleType="centerInside"
                            android:src="@drawable/user"
                            android:contentDescription="Image 3" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>



            </LinearLayout>
        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header"
        android:background="@color/white"/>

</androidx.drawerlayout.widget.DrawerLayout>
