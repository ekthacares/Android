<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
    android:background="@color/white"
android:orientation="vertical">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/imgBackArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Back"
            android:clickable="true" />

        <TextView
            android:id="@+id/tvProfileHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Blood for others"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imgBackArrow"
            android:layout_marginStart="16dp" />
    </RelativeLayout>

<EditText
    android:id="@+id/etName"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:hint="Request For"
    android:paddingStart="16dp"
    android:background="@drawable/rounded_edittext2"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:layout_marginBottom="12dp" />

<EditText
    android:id="@+id/etBloodGroup"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:hint="Blood Group"
    android:paddingStart="16dp"
    android:background="@drawable/rounded_edittext2"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:layout_marginBottom="12dp" />


<EditText
    android:id="@+id/etMobileNumber"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:hint="Mobile Number"
    android:paddingStart="16dp"
    android:background="@drawable/rounded_edittext2"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:layout_marginBottom="12dp" />


<EditText
    android:id="@+id/etCity"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:hint="City"
    android:paddingStart="16dp"
    android:background="@drawable/rounded_edittext2"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:layout_marginBottom="12dp" />


<EditText
    android:id="@+id/etState"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:hint="State"
    android:paddingStart="16dp"
    android:background="@drawable/rounded_edittext2"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:layout_marginBottom="12dp" />


<Button
    android:id="@+id/btnSubmitRequest"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="16dp"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:text="Submit Request"
    android:src="@drawable/callnow"
    android:textColor="@color/white"
    android:textAllCaps="false"
    android:fontFamily="@font/ubuntu"
    android:backgroundTint="@color/red" />

</LinearLayout>
