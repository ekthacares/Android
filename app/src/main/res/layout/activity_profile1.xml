<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/imgBackArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Back"
            android:clickable="true"
            />


        <!-- Profile Heading -->
        <TextView
            android:id="@+id/tvProfileHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imgBackArrow"
            android:layout_marginStart="16dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />


    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/profile"
        android:clickable="true"
        android:focusable="true" />


    <!-- Remove marginTop here to close gap -->
    <TextView
        android:id="@+id/donor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donor Name"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- Straight line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="#CCCCCC" />


    <!-- User ID -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">

        <!-- RelativeLayout to align value (TextView) and icon (ImageView) -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- UserId Value TextView (Aligned to the left) -->
            <TextView
                android:id="@+id/tvUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User ID"
                android:textSize="24sp"
                android:fontFamily="@font/ubuntu"
                android:textColor="@color/red"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />


        </RelativeLayout>
    </LinearLayout>


    <!-- Straight line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="#CCCCCC" />

    <!-- Donor Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Donor Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvDonorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donor Name"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />

            <!-- Edit Icon (Aligned to the right next to the value) -->
            <ImageView
                android:id="@+id/imgEditDonorName"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp" />

        </RelativeLayout>
    </LinearLayout>

    <!-- Straight line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="#CCCCCC" />

    <!-- Mobile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <!-- Mobile Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile "
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />
        </RelativeLayout>

    </LinearLayout>

    <!-- Straight line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="#CCCCCC" />

    <!-- Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />

            <!-- Edit Icon (Aligned to the right next to the value) -->
            <ImageView
                android:id="@+id/imgEditEmail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Email"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp" />

        </RelativeLayout>
    </LinearLayout>


    <!-- Straight line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="#CCCCCC" />


    <!-- DateOfBirth -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- DateOfBirth Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvDateOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Straight line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="#CCCCCC" />

    <!-- BloodGroup -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- BloodGroup Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvBloodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />

        </RelativeLayout>

    </LinearLayout>


    <!-- Straight line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="#CCCCCC" />

    <!-- Age -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Age Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Straight line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="#CCCCCC" />


    <!-- Gender -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Gender Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />
        </RelativeLayout>
    </LinearLayout>


    <!-- Straight line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="#CCCCCC" />


    <!-- Address -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Address Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />

            <!-- Edit Icon (Aligned to the right next to the value) -->
            <ImageView
                android:id="@+id/imgEditAddress"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Address"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp" />
        </RelativeLayout>

    </LinearLayout>



    <!-- Straight line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="#CCCCCC" />


    <!-- City -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- City Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />

            <!-- Edit Icon (Aligned to the right next to the value) -->
            <ImageView
                android:id="@+id/imgEditCity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit City"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Straight line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="#CCCCCC" />


    <!-- State -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <!-- RelativeLayout to align value and edit icon to the right -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- State Value TextView (Aligned to the right) -->
            <TextView
                android:id="@+id/tvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />

            <!-- Edit Icon (Aligned to the right next to the value) -->
            <ImageView
                android:id="@+id/imgEditState"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit State"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
